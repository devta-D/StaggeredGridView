<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:padding="1dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:id="@+id/topViewContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/topImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_alignBottom="@+id/topImageView"
            android:layout_alignParentBottom="true"
            android:background="#2E000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/topTitleView"
                android:gravity="start|center"
                android:maxLines="1"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFF"/>

    <RelativeLayout
        android:id="@+id/bottomViewContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/bottomImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_alignBottom="@+id/bottomImageView"
            android:layout_alignParentBottom="true"
            android:background="#2E000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/bottomTitleView"
                android:gravity="start|center"
                android:maxLines="1"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>